<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_20sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_15sdp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:weightSum="3"
            app:layout_constraintWidth_percent="0.95"
            android:id="@+id/titleLayout"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/departure_on"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinmedium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_travel_time"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinmedium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seat"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinmedium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/titleLayout"
            app:layout_constraintEnd_toEndOf="@id/titleLayout"
            app:layout_constraintTop_toBottomOf="@id/titleLayout"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/dataLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/departure_on"
                android:textSize="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/departureTime"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_travel_time"
                android:textSize="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:id="@+id/travelTime"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seat"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"
                android:id="@+id/availableSeat"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dataLayout"
            android:text="@string/price"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_25sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinmedium"
            android:id="@+id/price"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/titleLayout"
            app:layout_constraintTop_toBottomOf="@id/price"
            android:text="@string/start"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/poppinsregular"
            android:drawableStart="@drawable/baseline_adjust_24"
            android:drawablePadding="@dimen/_10sdp"
            android:id="@+id/startText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/titleLayout"
            app:layout_constraintTop_toBottomOf="@id/startText"
            android:text="@string/end"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/poppinsregular"
            android:drawableStart="@drawable/baseline_location_on_24"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:id="@+id/endText"/>
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/startText"
            app:layout_constraintTop_toBottomOf="@id/startText"
            app:layout_constraintBottom_toTopOf="@id/endText"
            android:background="@color/black"
            android:layout_marginStart="@dimen/_8sdp"
            android:id="@+id/line"/>
        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            app:layout_constraintStart_toStartOf="@id/price"
            app:layout_constraintEnd_toEndOf="@id/price"
            app:layout_constraintTop_toBottomOf="@id/price"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/routeImage"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>