<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_20sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/busname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/txtBusName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/poppinsregular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtBusName"
            app:layout_constraintBottom_toBottomOf="@id/txtBusName"
            android:text="@string/busname"
            android:layout_marginEnd="@dimen/_10sdp"
            android:id="@+id/busName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/txtBusName"
            app:layout_constraintTop_toBottomOf="@id/txtBusName"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/busnumber"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:id="@+id/txtBusNumber"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/busnumber"
            android:fontFamily="@font/poppinsregular"
            app:layout_constraintEnd_toEndOf="@id/busName"
            app:layout_constraintTop_toTopOf="@id/txtBusNumber"
            app:layout_constraintBottom_toBottomOf="@id/txtBusNumber"
            android:textSize="@dimen/_20sdp"
            android:id="@+id/busNumber"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/capacity"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="@id/txtBusNumber"
            app:layout_constraintTop_toBottomOf="@id/txtBusNumber"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/txtCapacity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/busNumber"
            app:layout_constraintTop_toTopOf="@id/txtCapacity"
            app:layout_constraintBottom_toBottomOf="@id/txtCapacity"
            android:text="@string/capacity"
            android:fontFamily="@font/poppinsregular"
            android:textSize="@dimen/_20sdp"
            android:id="@+id/capacity"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>